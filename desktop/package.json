{
  "name": "aircontroller-desktop",
  "version": "1.0.0",
  "description": "AirController â€“ PC host app (Electron + React)",
  "main": "./out/main/index.js",
  "author": "",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck": "tsc --noEmit",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "release:preflight": "node ./scripts/release-preflight.mjs",
    "release:verify": "npm run release:preflight && npm run typecheck && npm run lint && npm run build",
    "release:win": "npm run release:verify && electron-builder --win --x64 --publish never",
    "release:mac": "npm run release:verify && electron-builder --mac --publish never",
    "release:linux": "npm run release:verify && electron-builder --linux --publish never",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir --x64",
    "build:win": "npm run build && electron-builder --win --x64",
    "build:win:x64": "npm run build:win"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "bonjour-service": "^1.3.0",
    "qrcode": "^1.5.4",
    "ws": "^8.18.1"
  },
  "optionalDependencies": {
    "vigemclient": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@electron-toolkit/eslint-config": "^2.1.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^22.13.10",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "7zip-bin": "^5.2.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.7.3",
    "vite": "^7.2.6"
  }
}
