<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D">

    <!-- Top bar: Player info and connection status -->
    <TextView
        android:id="@+id/tv_player_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Player 1"
        android:textColor="#00C8FF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:text="● Connected"
        android:textColor="#00FF88"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- LT / LB (Left Trigger & Bumper) -->
    <Button
        android:id="@+id/btn_lt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#333333"
        android:text="LT"
        android:textColor="#CCCCCC"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@id/btn_lb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.18" />

    <Button
        android:id="@+id/btn_lb"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#333333"
        android:text="LB"
        android:textColor="#CCCCCC"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@id/btn_select"
        app:layout_constraintStart_toEndOf="@id/btn_lt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.18" />

    <!-- Start / Select -->
    <Button
        android:id="@+id/btn_select"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#2A2A2A"
        android:text="⏪"
        android:textColor="#999999"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@id/btn_start"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/btn_lb"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#2A2A2A"
        android:text="⏩"
        android:textColor="#999999"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@id/btn_rb"
        app:layout_constraintStart_toEndOf="@id/btn_select"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- RT / RB (Right Trigger & Bumper) -->
    <Button
        android:id="@+id/btn_rb"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#333333"
        android:text="RB"
        android:textColor="#CCCCCC"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@id/btn_rt"
        app:layout_constraintStart_toEndOf="@id/btn_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.18" />

    <Button
        android:id="@+id/btn_rt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#333333"
        android:text="RT"
        android:textColor="#CCCCCC"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_rb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.18" />

    <!-- Left Joystick -->
    <com.aircontroller.app.ui.views.JoystickView
        android:id="@+id/joystick_left"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_lt"
        app:layout_constraintVertical_bias="0.55" />

    <!-- D-Pad (above-left of left joystick, or to right of it) -->
    <FrameLayout
        android:id="@+id/dpad_container"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/joystick_left"
        app:layout_constraintStart_toEndOf="@id/joystick_left"
        app:layout_constraintTop_toTopOf="@id/joystick_left">

        <!-- D-pad Up -->
        <ImageButton
            android:id="@+id/btn_dpad_up"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="top|center_horizontal"
            android:background="@android:color/transparent"
            android:contentDescription="D-pad Up"
            android:src="@android:drawable/arrow_up_float"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="#AAAAAA" />

        <!-- D-pad Down -->
        <ImageButton
            android:id="@+id/btn_dpad_down"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@android:color/transparent"
            android:contentDescription="D-pad Down"
            android:src="@android:drawable/arrow_down_float"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="#AAAAAA" />

        <!-- D-pad Left -->
        <ImageButton
            android:id="@+id/btn_dpad_left"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical|start"
            android:background="@android:color/transparent"
            android:contentDescription="D-pad Left"
            android:src="@android:drawable/arrow_up_float"
            android:rotation="-90"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="#AAAAAA" />

        <!-- D-pad Right -->
        <ImageButton
            android:id="@+id/btn_dpad_right"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical|end"
            android:background="@android:color/transparent"
            android:contentDescription="D-pad Right"
            android:src="@android:drawable/arrow_up_float"
            android:rotation="90"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="#AAAAAA" />

        <!-- D-pad center circle -->
        <View
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent" />

    </FrameLayout>

    <!-- ABXY Buttons (diamond layout) -->
    <FrameLayout
        android:id="@+id/abxy_container"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@id/joystick_right"
        app:layout_constraintEnd_toStartOf="@id/joystick_right"
        app:layout_constraintTop_toTopOf="@id/joystick_right">

        <!-- Y (top) -->
        <ImageButton
            android:id="@+id/btn_y"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="top|center_horizontal"
            android:background="@drawable/btn_circle_yellow"
            android:contentDescription="Y Button"
            android:scaleType="centerInside"
            android:padding="12dp" />

        <!-- A (bottom) -->
        <ImageButton
            android:id="@+id/btn_a"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/btn_circle_green"
            android:contentDescription="A Button"
            android:scaleType="centerInside"
            android:padding="12dp" />

        <!-- X (left) -->
        <ImageButton
            android:id="@+id/btn_x"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical|start"
            android:background="@drawable/btn_circle_blue"
            android:contentDescription="X Button"
            android:scaleType="centerInside"
            android:padding="12dp" />

        <!-- B (right) -->
        <ImageButton
            android:id="@+id/btn_b"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/btn_circle_red"
            android:contentDescription="B Button"
            android:scaleType="centerInside"
            android:padding="12dp" />

    </FrameLayout>

    <!-- Right Joystick -->
    <com.aircontroller.app.ui.views.JoystickView
        android:id="@+id/joystick_right"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_rt"
        app:layout_constraintVertical_bias="0.55" />

</androidx.constraintlayout.widget.ConstraintLayout>
